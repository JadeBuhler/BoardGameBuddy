<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jade.boardgamebuddy.AddPlayer">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/edtPlayerName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Enter Player Name Here"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnChooseAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtPlayerName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@mipmap/default_user_round"
        android:stateListAnimator="@null" />

    <Switch
        android:id="@+id/swDefaultPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPlayerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:checked="true"
        android:text="Default Player"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtPlayerName"
        android:layout_below="@+id/swDefaultPlayer"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="26dp"
        android:stateListAnimator="@null"
        android:text="OK"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnOk"
        android:layout_alignBottom="@+id/btnOk"
        android:layout_alignStart="@+id/edtPlayerName"
        android:layout_marginStart="27dp"
        android:stateListAnimator="@null"
        android:text="Cancel"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>

